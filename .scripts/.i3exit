#!/bin/sh

lock() {
	i3lock
}

case "$1" in
	lock)
		lock
		;;
	suspend)
		if [[ "$(playerctl status)" == "Playing" ]]; then
			playerctl stop
		fi
		lock && systemctl suspend
		;;
	reboot)
		rm -rf ~/.browser_tmp/* && systemctl reboot
		;;
	shutdown)
		rm -rf ~/.browser_tmp/* && systemctl poweroff
		;;
	*)
		echo "Usage: $0 {lock|suspend|reboot|shutdown}"
		exit 2
		;;
esac

exit 0
